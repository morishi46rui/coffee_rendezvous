<div class="container">
  <h1><%= @user.name %></h1>
  <p><%= @user.profile %></p>
  <% if @user.avatar.attached? %>
   <%= image_tag @user.avatar, class: "avatar-image" %>
  <% end %>
  <% if @user == current_user %>
    <div class="edit-link">
      <%= link_to "ユーザ情報を編集", edit_user_registration_path, class: "edit-link btn btn-primary" %>
    </div>
  <% end %>
</div>
