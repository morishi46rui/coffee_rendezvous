<div class="new-comments col-sm-12 col-md-6 py-3 bg-light">
  <h2 class="mb-3">新着コメント</h2>
  <% @new_comments.each do |comment| %>
  <div class="card mb-3">
    <div class="card-body">
      <p class="card-text"><%= comment.content %></p>
      <div class="d-flex justify-content-between align-items-center">
        <a href="<%= shop_path(comment.shop) %>" class="card-link"><%= comment.shop.name %></a>
        <small class="text-muted"><%= comment.created_at.strftime('%Y-%m-%d %H:%M:%S') %></small>
      </div>
    </div>
  </div>
  <% end %>
</div>