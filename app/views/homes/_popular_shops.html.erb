<div class="popular-shops py-3 col-sm-12 col-md-6 bg-light">
  <h2 class="mb-3">人気のカフェ	<i class="far fa-bookmark mx-1"></i></h2>
  <div class="row">
    <% @popular_shops.each do |shop| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if shop.images.attached? %>
        <%= image_tag shop.images[0], alt: "店舗の写真", class: "card-img-top p-3", style: "object-fit: cover; height: 200px;" %>
        <% else %>
        <%= image_tag 'no_image.png', alt: "店舗の写真", class: "card-img-top p-3", style: "object-fit: cover; height: 200px;" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to shop.name, shop_path(shop), class: "text-decoration-none stretched-link" %></h5>
          <p class="card-text"><%= shop.address %></p>
          <p class="card-text"><%= shop.bookmarks.count %>件のブックマーク</p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>