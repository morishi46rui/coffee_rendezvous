<div class="container">
  <h1 class="text-center mb-5">カフェ一覧</h1>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @shops.each do |shop| %>
      <div class="col">
        <div class="card h-100">
          <% if shop.images.attached? %>
            <%= link_to image_tag(shop.images.first.variant(resize_to_limit: [300, 300]), class: "card-img-top"), shop_path(shop) %>
          <% else %>
            <%= link_to image_tag('no_image.png', class: "card-img-top"), shop_path(shop) %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to shop.name, shop_path(shop), class: "text-decoration-none" %></h5>
            <p class="card-text"><%= shop.address %></p>
            <p class="card-text"><%= shop.phone %></p>
            <p class="card-text">登録日:<%= shop.created_at.strftime("%Y/%m/%d") %></p>
          </div>
          <div class="card-footer">
            <p class="card-text text-end"><small class="text-muted">by: <%= shop.user.name %></small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
