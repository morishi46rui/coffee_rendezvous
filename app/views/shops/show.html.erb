<div class="container my-5">
  <div class="row">
    <div class="col-sm-12 col-md-6 mb-3">
      <div class="card mb-3">
        <div class="card-body">
          <%= render 'shops/bookmark' %>
          <%= render 'shops/images' %>
        </div>
      </div>
      <div class="card shop-map">
        <div class="card-body">
          <%= render "shops/map" %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-6">
      <div class="card mb-3">
        <div class="card-body">
          <%= render 'shops/detail' %>
        </div>
      </div>
      <div class="card shop-images mb-5">
        <div class="card-body">
          <%= render 'shops/comments' %>
        </div>
      </div>
    </div>
  </div>
</div>
