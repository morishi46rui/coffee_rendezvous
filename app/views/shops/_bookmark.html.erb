<div class="row mb-3">
  <h1 class="card-title mb-4 border-bottom border-3 col-md-12 col-lg-8"><%= @shop.name %></h1>
  <div class="bookmark-btn col-md-12 col-lg-4 text-end">
    <% if @shop.bookmarked_by?(current_user) %>
      <%= form_with(url: shop_bookmark_path(@shop), method: :delete) do |form| %>
        <%= form.submit "ブックマークを外す", class: "btn btn-outline-success btn-sm" %>
      <% end %>
    <% else %>
      <%= form_with(url: shop_bookmarks_path(@shop), method: :post) do |form| %>
        <%= form.submit "ブックマーク", class: "btn btn-outline-success btn-sm" %>
      <% end %>
    <% end %>
  </div>
</div>